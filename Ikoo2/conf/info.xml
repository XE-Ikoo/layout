<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
	<title xml:lang="ko">Ikoo2</title>
	<description xml:lang="ko">Ikoo2</description>
	<version>1.0</version>
	<date>2015-03-20</date>
	<author link="http://grace.nflint.com">
		<name xml:lang="ko">아이쿠</name>
	</author>
	
	<extra_vars>
		<group>
			<title xml:lang="ko">레이아웃 기본 설정</title>
			<var name="logo_title" type="text">
				<title xml:lang="ko">로고 타이틀</title>
				<description xml:lang="ko">로고 타이틀을 작성해 주세요.</description>
			</var>
			<var name="logo_image" type="image">
				<title xml:lang="ko">로고 이미지</title>
				<description xml:lang="ko">상단 로고를 이미지로 사용합니다. </description>
			</var>
			<var name="logo_title_sub" type="text">
				<title xml:lang="ko">로고 서브 타이틀</title>
				<description xml:lang="ko">로고 서브 타이틀을 작성해 주세요.</description>
			</var>
			<var name="maker" type="textarea">
				<title xml:lang="ko">만든이 입력</title>
				<description xml:lang="ko">만든이 등의 정보를 직접 입력할 수 있습니다. HTML입력도 가능합니다.</description>
			</var>
		</group>
		<group>
			<title xml:lang="ko">레이아웃 서브 페이지 설정</title>
			<var name="layout_type" type="select">
				<title xml:lang="ko">왼쪽사이드 설정</title>
				<description xml:lang="ko">사이드 메뉴 출력 여부를 선택해주세요.</description>
				<options value="sub_full">
					<title xml:lang="ko">컨텐트(기본)</title>
				</options>
				<options value="sub_left">
					<title xml:lang="ko">왼쪽메뉴+컨텐트</title>
				</options>
				<options value="sub_right">
					<title xml:lang="ko">오른쪽메뉴+컨텐트</title>
				</options>
			</var>
		</group>
		<group>
			<title xml:lang="ko">레이아웃 로그인 창 설정</title>
			<var name="login_img" type="image">
				<title xml:lang="ko">로고 이미지</title>
				<description xml:lang="ko">로그인창 로고 이미지(70 X 70)</description>
			</var>
		</group>
	</extra_vars>
	
	<menus>
		<menu name="gnb" maxdepth="3" default="true">
			<title xml:lang="ko">상단 메뉴</title>
		</menu>
		<menu name="footer_menu" maxdepth="1" default="true">
			<title xml:lang="ko">하단 메뉴</title>
		</menu>
	</menus>
</layout>